@model IEnumerable<Despesa>

	@{
				ViewData["Title"] = "Lista de Despesas";
}


<table class="table table-striped">
	<thead>
		<tr>
			<th>Nome da Despesa</th>
			<th>Categoria</th>
			<th>Valor</th>
			<th>Data da Despesa</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var despesa in Model)
		{
			<tr>
				<td>@despesa.Nome_Despesa</td>
				<td>@despesa.Categoria</td>
				<td>@despesa.Valor.ToString("C")</td>
				<td>@despesa.Data_Despesa.ToString("dd/MM/yyyy")</td>
				<td><a asp-action="Edit" asp-route-id="@despesa.Id">Editar valores</a></td>
			</tr>
		}
</table>